<web-app xmlns="http://java.sun.com/xml/ns/javaee"">

<!--
 DO NOT EDIT THIS FILE - it will be overwritten on upgrade.
 To disable this filter, set bowstreet.ResponseHeaderFilter.EnableDefaultInstance=false in override.properties .
 To change the Cache-Control param value (e.g. to 300 seconds),
 set bowstreet.ResponseHeaderFilter.Override.CacheControl=max-age=300 in override.properties .
 To configure your own response header filter with different URL patterns and/or response header values,
 make a copy of this deployment descriptor fragment in this folder WITHOUT the DefaultInstance init param and set your own
-->

	<filter>
	  <filter-name>ResponseHeaderFilter</filter-name>
	  <filter-class>com.bowstreet.servlet.ResponseHeaderFilter</filter-class>
      <init-param>
        <param-name>DefaultInstance</param-name> <!-- Indicates that this is the default out of the box cache control filter -->
        <param-value>true</param-value>          <!-- Do not set this param true in your own custom filter config -->
      </init-param>
      <init-param>
        <param-name>debug</param-name>
        <param-value>false</param-value>         <!-- Set this true to temporarily enable SystemOut debugging from this filter -->
      </init-param>
	  <init-param>
	    <param-name>Cache-Control</param-name>   <!-- Response Header to be set by this filter for the matched URLs below -->
	    <param-value>max-age=28800</param-value> <!-- Response Header value (8hrs) to be set by this filter for the matched URLs -->
	  </init-param>
	</filter>

	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/clientjavascript/*</url-pattern>
      </filter-mapping>
	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/data_layout_templates/*</url-pattern>
      </filter-mapping>
 	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/dojo/*</url-pattern>
      </filter-mapping>
	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/html_templates/*</url-pattern>
      </filter-mapping>
 	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/images/*</url-pattern>
      </filter-mapping>
 	<filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>/factory/pages/*</url-pattern>
      </filter-mapping>
   
</web-app>